extends layout
block content
  br
  h4 #{title} :
  hr

  form(method="POST")
    .mb-3
      label.form-label(for="prenom") pr√©nom :
      input#prenom.form-control(
        type="text"
        placeholder=""
        name="prenom"
        required
        value=undefined === utilisateur ? "" : utilisateur.prenom
      )
    .mb-3
      label.form-label(for="nom") nom  :
      input#nom.form-control(
        type="text"
        placeholder=""
        name="nom"
        required
        value=undefined === utilisateur ? "" : utilisateur.nom
      )
    .mb-3
      label.form-label(for="email") email :
      input#email.form-control(
        type="email"
        placeholder="Ex@exemple.com"
        name="email"
        required
        value=undefined === utilisateur ? "" : utilisateur.email
      )
    .mb-3
      label.form-label(for="mdp") ancien mot de passe :
      input#mdp.form-control(
        
        type="password"
        placeholder="  "
        name="ancienmdp"
        required
              
      )
    .mb-3
      label.form-label(for="nouveaumdp") nouveau mot de passe : 
      input#mdp.form-control(
        
        type="password"
        placeholder="  "
        name="nouveaumdp"
        required
              
      )
