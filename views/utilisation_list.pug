extends layout
block content
  br
  h5= title

  p
   table.table
      thead
        tr
          th(scope="col") Date
          th(scope="col") Duree en minutes
          th(scope="col") Machine
          th(scope="col") Tarif machine
          th(scope="col") Utilisateur
          th(scope="col") 
          
      tbody
        each utilisation in utilisation_list
        
            tr
            td= utilisation.dateUtilisation
            td= utilisation.duree 
            td= utilisation.machine.nom
            td= utilisation.tarifMachine
            td= utilisation.utilisateur.nom
            if permissions.includes("supprimerUtilisation")  
             td
                a(href=utilisation.url+"/delete")  Supprimer 
                
        else
          li #[strong Il n'y a pas d'utilisations ! ] 
          br
