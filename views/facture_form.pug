extends layout
block content
 h4 #{title}

 p
  hr
  br
  form(method="POST")

    .mb-3
      label.form-label(for="dateFacture") Date facture :
      input#dateFacture.form-control(
        type="month"
        name="dateFacture"
        value=undefined === facture? "" : facture.dateFacture
      )
      
    .mb-3
      label.form-label(for="utilisateur") utilisateur &ensp;
      select
       each utilisateur  in utilisateurs
        option(value=utilisateur.id)  #{utilisateur.nom}  #{utilisateur.prenom} 
    
    //.mb-3
      label.form-label(for="machine") machine :
      input#machine.form-control(
        type="text"
        name="machine"
        required
        value=undefined === utilisation ? "" : utilisation.machine.nom
      )
    .mb-3
      button.btn.btn-primary(type="submit") Submit

  if errors
    ul
      each error in errors
        li!= error.msg